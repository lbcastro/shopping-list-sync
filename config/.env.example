# Todoist Configuration (REQUIRED)
TODOIST_API_KEY=your_todoist_api_key_here
TODOIST_SHOPPING_PROJECT_NAME=shopping
TODOIST_SHOPPING_PROJECT_ID=your_project_id_here

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Sync Configuration (Optional)
# How often to check for changes in seconds (default: 60)
SYNC_INTERVAL_SECONDS=60

# Path to categories configuration file (default: config/categories.yaml)
CATEGORIES_FILE=config/categories.yaml

# Logging Configuration (Optional)
# Options: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Optional: Path to log file (if not set, logs only to console)
# LOG_FILE=shopping_sync.log

# Scheduler timezone (default: UTC)
# Use IANA timezone names like 'America/New_York' or 'Europe/Copenhagen'
SCHEDULER_TIMEZONE=UTC

# Error Handling Configuration (Optional)
# Options: log, task, both (default: log)
# - log: Only log errors
# - task: Create Todoist tasks for errors (requires TODOIST_SYSTEM_PROJECT_ID)
# - both: Log errors and create tasks
ERROR_HANDLING_MODE=log

# Optional: Todoist project ID for error tasks (only needed if ERROR_HANDLING_MODE includes 'task')
# TODOIST_SYSTEM_PROJECT_ID=your_system_project_id_here

# State Management (Optional)
# Path to state file for tracking sync changes (default: data/sync_state.json)
STATE_FILE=data/sync_state.json
